<link rel="stylesheet" href="../css/user_sign_up.css">
<div class="header">
    <div class="image">
        <!-- <img src="../assets/images/mysvg.svg" alt=""> -->
        <img src="../images/sign_up.svg" alt="image">
    </div>
    <div class="container">
        <h1>Sign Up</h1>
        <form action="/user/create" method="POST" autocomplete="off">
            <input type="text" name="name" placeholder="Your name" required maxlength="13">
            <input type="email" name="email" placeholder="Your Email" required autocomplete="off">
            <input type="password" name="password" placeholder="Enter Password" required autocomplete="off">
            <input type="password" name="confirm_password" placeholder="Confirm Password" required>
            <input class="btn-grad " type="submit" value="Sign Up">
        </form>
    </div>
</div>